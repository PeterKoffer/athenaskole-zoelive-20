{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@features/*": ["src/features/*"],
      "@ui/*": ["src/shared/ui/*"]
    },
    "types": ["vite/client"],
    "useDefineForClassFields": true
  },
  "include": ["src", "vite.config.ts"]
}
