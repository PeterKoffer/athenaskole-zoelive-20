{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "strict": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "noEmit": true,
    "skipLibCheck": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "src/features/auth/**/*.ts",
    "src/features/auth/**/*.tsx",
    "src/features/daily-program/**/*.ts",
    "src/features/daily-program/**/*.tsx",
    "src/features/shell/**/*.ts",
    "src/features/shell/**/*.tsx",
    "src/shared/ui/**/*.ts",
    "src/shared/ui/**/*.tsx",
    "src/types/**/*.d.ts"
  ]
}